{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["node"],
    "outDir": "dist"
  },
  "include": ["src/scripts/**/*", "src/lib/**/*", "src/models/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifiers": true
  }
}
